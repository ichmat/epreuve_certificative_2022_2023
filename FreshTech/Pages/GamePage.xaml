<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:FreshTech.Views"
             xmlns:game="clr-namespace:FreshTech.Views.Game"
             Unloaded="ContentPage_Unloaded"
          x:Class="FreshTech.Pages.GamePage">
    <Grid BackgroundColor="{StaticResource Gray100}">
        <Grid.RowDefinitions>
            <RowDefinition Height="110" />
            <RowDefinition Height="*" />
            <RowDefinition Height="110" />
        </Grid.RowDefinitions>
        <game:GameMap Margin="10,0" 
                      x:Name="gameMap" Grid.Row="1" />

        <ActivityIndicator Color="{StaticResource Primary}" x:Name="AI_Loading" WidthRequest="100" HeightRequest="100" Grid.ColumnSpan="10" Grid.RowSpan="10" />
    </Grid>
</ContentPage>