<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreshTech.Pages.LangagePage"
             xmlns:views="clr-namespace:FreshTech.Views"
             Title="LangagePage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" Margin="20">
            <!-- Grand titre "Language" cliquable -->
            <views:TitleSpan Title="Langage" GoBack="TitleSpan_GoBack" />

            <!-- Radio boutons -->
            <StackLayout>
                <RadioButton Content="Francais" IsChecked="true" FontSize="30" Margin="0,30,0,0"/>
                <RadioButton Content="Anglais" FontSize="30" />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
