<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreshTech.Pages.LoginPage"
             Title="LoginPage">
    <StackLayout Margin="20">
        <Label Text="Login" FontSize="Large" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" />
        <Entry x:Name="UsernameEntry" Placeholder="Username" Margin="20,20,20,0" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Margin="20,10,20,0" />
        <!--<Button Text="Se connecter" Clicked="OnLoginButtonClicked" HorizontalOptions="FillAndExpand" />-->
    </StackLayout>
</ContentPage>