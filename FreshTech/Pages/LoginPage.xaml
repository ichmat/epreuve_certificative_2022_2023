<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreshTech.Pages.LoginPage"
             Title="LoginPage">
    <StackLayout Margin="20">
        <Label Text="Connexion" FontSize="Large" HorizontalOptions="Center" />
        <Label Text="Entrez vos informations de connexion." FontSize="Medium" HorizontalOptions="Center" />
        <Entry Placeholder="Nom d'utilisateur" />
        <Entry Placeholder="Mot de passe" IsPassword="true" />
        <!--<Button Text="Se connecter" Clicked="OnLoginButtonClicked" HorizontalOptions="FillAndExpand" />-->
    </StackLayout>
</ContentPage>