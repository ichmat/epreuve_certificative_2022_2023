<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreshTech.Pages.ProposPage"
             Title="ProposPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" Margin="20">
            <!-- Grand titre "Confidentialité" -->
            
            <Label Text="A propos" TextColor="Gray" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTitleLabelTapped" />
                </Label.GestureRecognizers>
            </Label>

            <!-- Barre de séparation grise -->
            <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="FillAndExpand" />

            <!-- Reste de la page vide -->
            <StackLayout VerticalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>