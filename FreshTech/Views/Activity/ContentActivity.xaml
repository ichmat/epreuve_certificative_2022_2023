<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreshTech.Views.Activity.ContentActivity"
             HorizontalOptions="Fill"
             HeightRequest="130"
             xmlns:views="clr-namespace:FreshTech.Views">
    <views:ContentWithClippedIcon
        x:Name="content"
        ClippedIcon="activity.svg"
        HeightRequest="130" HorizontalOptions="Fill" ImgScale="1.5" ImgAnchorX="1" ImgAnchorY="-0.1"
        LabelBottomClicked="content_LabelBottomClicked"
        LabelBottom="Consulter"
        >
    </views:ContentWithClippedIcon>
    <ContentView.Shadow>
        <Shadow Brush="Gray" Offset="0,5" Opacity="0.5" />
    </ContentView.Shadow>
</ContentView>
