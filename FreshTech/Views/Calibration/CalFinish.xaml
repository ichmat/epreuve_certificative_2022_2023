<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:FreshTech.Views"
             x:Class="FreshTech.Views.Calibration.CalFinish">
    <Grid>
        <VerticalStackLayout Margin="25">
            <views:TitleSpan Title="Calibrage terminé" Margin="0,0,0,25"/>

            <Label>
                Le calibrage est maintenant terminé, vous pouvez commencer à utiliser l'application ou consulter les résultat générés.
            </Label>
        </VerticalStackLayout>

        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Button WidthRequest="170" HeightRequest="58" Clicked="Finish_Clicked" Text="TERMINER" BackgroundColor="{StaticResource Success}" TextColor="White" Margin="0,0,0,25"/>
            <Button WidthRequest="170" HeightRequest="58" Clicked="CheckResult_Clicked" Text="CONSULTER" BackgroundColor="{StaticResource Warning}" TextColor="White" Margin="0,0,0,25"/>
        </VerticalStackLayout>
    </Grid>
</ContentView>
