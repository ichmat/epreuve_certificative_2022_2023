<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreshTech.Views.Inventaire.ContentInventory">
    <Border Margin="10" x:Name="mainBorder" WidthRequest="80" HeightRequest="80">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="8" />
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Radius="10"
                    Offset="0,5"
                    x:Name="mainBorderShadow"
                    />
        </Border.Shadow>
        <StackLayout>

            <Grid HorizontalOptions="End" VerticalOptions="Start">
                <Ellipse WidthRequest="20" HeightRequest="20" Fill="Red" />
                <Label x:Name="L_Number"  HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontSize="8" />
            </Grid>




            <Label Margin="0,10,0,0" x:Name="L_Title" HorizontalTextAlignment="Center">
            </Label>
        </StackLayout>
    </Border>
    
</ContentView>
