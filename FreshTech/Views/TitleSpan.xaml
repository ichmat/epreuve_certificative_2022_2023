<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             HorizontalOptions="Fill"
             x:Class="FreshTech.Views.TitleSpan">
    <VerticalStackLayout HorizontalOptions="Fill" Margin="25">
        <Label 
            FontSize="30"
            x:Name="L_Title"
            TextColor="Gray"
            Text="#Title#"
            Margin="0,0,0,25"
            HorizontalOptions="Start" />

        <Border HorizontalOptions="Fill" HeightRequest="3" BackgroundColor="LightGray">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8" />
            </Border.StrokeShape>
        </Border>
    </VerticalStackLayout>
</ContentView>
